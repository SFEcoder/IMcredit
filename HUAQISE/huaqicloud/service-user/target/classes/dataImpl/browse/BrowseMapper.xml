<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.user.data.browse.BrowseMapper">
    <insert id="insertBrowse" parameterType="com.example.user.po.Browse" useGeneratedKeys="true" keyProperty="id">
        insert into Browse(user_id,ep_id,create_time)
        values(#{userId},#{ePId},#{createTime})
    </insert>

    <select id="selectBrowseByUid" resultMap="Browse">
        select * from browse where user_id=#{userId} order by create_time desc
    </select>

    <select id="existBrowse" resultMap="Browse">
        select * from browse where user_id=#{userId} and ep_id=#{epId}
    </select>

    <delete id="deleteBrowse">
        delete from browse where user_id = #{userId} and ep_id=#{epId}
    </delete>

    <update id="updateBrowse" parameterType="com.example.user.po.Browse">
        update browse set create_time = #{createTime} where user_id=#{userId} and ep_id=#{epId}
    </update>



    <resultMap id="Browse" type="com.example.user.po.Browse">
        <result column="user_id" property="userId"></result>
        <result column="ep_id" property="epId"></result>
        <result column="create_time" property="createTime"></result>
    </resultMap>
</mapper>
