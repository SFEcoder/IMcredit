<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.enterprise.dao.enterprise.EnterpriseMapper">
    <insert id="insertEnterprise" parameterType="com.example.enterprise.po.Enterprise" useGeneratedKeys="true" keyProperty="id">
        insert into Enterprise(email,password,name,register_number,contact_number,license,valid,contact_name,e_photo)
        values(#{email},#{password},#{name},#{registerNumber},#{contactNumber},#{license},#{valid},#{contactName},#{ePhoto})
    </insert>

    <select id="getEnterpriseById" resultMap="Enterprise">
        select * from Enterprise where id=#{id}
    </select>

    <select id="getEnterpriseByKey" resultMap="Enterprise">
        select * from Enterprise where instr(name,#{key})>0
    </select>

    <select id="getTwentyEnterprises" resultMap="Enterprise">
        select * from Enterprise order by rand() limit 20
    </select>

    <select id="getEnterpriseByEmail" resultMap="Enterprise">
        select * from Enterprise where email=#{email}
    </select>

    <delete id="deleteEnterprise">
        delete from Enterprise where id = #{id}
    </delete>

    <update id="updateEnterprise" parameterType="com.example.enterprise.po.Enterprise">
        update Enterprise set password = ifnull(#{password},password),financial_score = ifnull(#{financialScore},financial_score),diver_score = ifnull(#{diverScore},diver_score),total_score = ifnull(#{totalScore},total_score),contact_name=ifnull(#{contactName},contact_name),valid=ifnull(#{valid},valid),contact_number=ifnull(#{contactNumber},contact_number),e_photo=ifnull(#{ePhoto},e_photo), e_grade = ifnull(#{eGrade},e_grade) where id=#{id}
    </update>

    <update id="updateEpList"  parameterType="java.util.List">
        <foreach collection="list" item="item"  separator=";">
            update Enterprise set password = ifnull(#{item.password},password),financial_score = ifnull(#{item.financialScore},financial_score),diver_score = ifnull(#{item.diverScore},diver_score),
            total_score = ifnull(#{item.totalScore},total_score),contact_name=ifnull(#{item.contactName},contact_name),valid=ifnull(#{item.valid},valid),contact_number=ifnull(#{item.contactNumber},contact_number),e_photo=ifnull(#{item.ePhoto},e_photo), e_grade = ifnull(#{item.eGrade},e_grade)
            where id = #{item.id}
        </foreach>
    </update>

    <resultMap id="Enterprise" type="com.example.enterprise.po.Enterprise">
        <id column="id" property="id"></id>
        <result column="email" property="email"></result>
        <result column="password" property="password"></result>
        <result column="name" property="name"></result>
        <result column="register_number" property="registerNumber"></result>
        <result column="contact_number" property="contactNumber"></result>
        <result column="license" property="license"></result>
        <result column="valid" property="valid"></result>
        <result column="contact_name" property="contactName"></result>
        <result column="e_photo" property="ePhoto"></result>
        <result column="user_type" property="userType"></result>
        <result column="e_grade" property="eGrade"></result>
        <result column="financial_score" property="financialScore"></result>
        <result column="diver_score" property="diverScore"></result>
        <result column="total_score" property="totalScore"></result>
    </resultMap>
</mapper>
